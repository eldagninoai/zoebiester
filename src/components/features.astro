---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Intervención Familiar",
    description: "Acompañamiento para ayudar a tu ser querido a dar el primer paso hacia la recuperación.",
    icon: "bx:bxs-group",
  },
  {
    title: "Terapia Individual",
    description: "Proceso personalizado de logoterapia para encontrar sentido de vida y superar la adicción.",
    icon: "bx:bxs-user-circle",
  },
  {
    title: "Orientación Familiar",
    description: "Apoyo para familiares sobre cómo acompañar sin lastimar, establecer límites saludables y manejar codependencia.",
    icon: "bx:bxs-heart",
  },
  {
    title: "Terapia de Pareja",
    description: "Reconstruir la confianza y fortalecer el vínculo durante el proceso de recuperación.",
    icon: "bx:bxs-chat",
  },
  {
    title: "Prevención de Recaídas",
    description: "Seguimiento continuo después de rehabilitación para mantener la recuperación a largo plazo.",
    icon: "bx:bxs-shield",
  },
];
---

<div class="mt-16 md:mt-0 text-center">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight text-slate-800">
    Servicios de Acompañamiento
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Apoyo profesional para ti y tu familia en el proceso de recuperación
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.slice(0, 3).map((item) => (
      <div class="flex flex-col gap-4 items-center text-center p-6 rounded-xl transition-all duration-300 hover:shadow-lg hover:scale-105 hover:bg-white">
        <div class="bg-[#7BA7BE] rounded-full p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>

<div class="grid sm:grid-cols-2 mt-16 gap-16 max-w-4xl mx-auto">
  {
    features.slice(3).map((item) => (
      <div class="flex flex-col gap-4 items-center text-center p-6 rounded-xl transition-all duration-300 hover:shadow-lg hover:scale-105 hover:bg-white">
        <div class="bg-[#7BA7BE] rounded-full p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
