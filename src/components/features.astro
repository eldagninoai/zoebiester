---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Intervención Familiar",
    description: "Acompañamiento para ayudar a tu ser querido a dar el primer paso.",
    icon: "bx:bxs-group",
    color: "#7BA7BE"
  },
  {
    title: "Terapia Individual",
    description: "Proceso personalizado de logoterapia para encontrar sentido de vida.",
    icon: "bx:bxs-user-circle",
    color: "#E89BA3"
  },
  {
    title: "Orientación Familiar",
    description: "Apoyo para establecer límites saludables y manejar codependencia.",
    icon: "bx:bxs-heart",
    color: "#A8B5A0"
  },
  {
    title: "Terapia de Pareja",
    description: "Reconstruir la confianza durante el proceso de recuperación.",
    icon: "bx:bxs-chat",
    color: "#9B86BD"
  },
  {
    title: "Prevención de Recaídas",
    description: "Seguimiento continuo para mantener la recuperación a largo plazo.",
    icon: "bx:bxs-shield",
    color: "#D4A59A"
  },
];
---

<div class="mt-16 md:mt-0 text-center mb-12 px-6 md:px-12">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight text-slate-800">
    Servicios de Acompañamiento
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Apoyo profesional para ti y tu familia en el proceso de recuperación
  </p>
</div>

<!-- Layout Bento Grid asimétrico -->
<div class="mt-16 mb-16 px-6 md:px-12 w-full">
<!-- Desktop: Grid uniforme -->
<div class="hidden md:grid md:grid-cols-3 lg:grid-cols-5 gap-6 max-w-[1600px] mx-auto">
  {features.map((item) => (
    <div class="rounded-2xl p-5 shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 flex flex-col items-center text-center h-[220px]" style={`background-color: ${item.color}`}>
  <div class="rounded-full p-3 w-12 h-12 shrink-0 flex items-center justify-center mb-3 bg-white/20 backdrop-blur-sm">
    <Icon class="text-white w-6 h-6" name={item.icon} />
  </div>
  <h3 class="font-semibold text-lg text-white mb-2 drop-shadow-md">{item.title}</h3>
  <p class="text-white text-sm leading-relaxed drop-shadow">{item.description}</p>
</div>
  ))}
</div>

<!-- Mobile: Grid simple 1 columna -->
<div class="md:hidden space-y-4">
  {features.map((item) => (
    <div class="rounded-2xl p-5 shadow-lg flex flex-col items-center text-center gap-4" style={`background-color: ${item.color}`}>
  <div class="flex flex-col items-center gap-3">
        <div class="rounded-full p-3 w-12 h-12 shrink-0 flex items-center justify-center bg-white/20 backdrop-blur-sm">
          <Icon class="text-white w-6 h-6" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg text-white mb-2 drop-shadow-md">{item.title}</h3>
          <p class="text-white text-sm leading-relaxed drop-shadow">{item.description}</p>
        </div>
      </div>
    </div>
  ))}
</div>
</div>