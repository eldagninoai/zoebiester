---
import { SEO } from "astro-seo";
import Footer from "@/components/footer.astro";
import Navbar from "@/components/navbar/navbar.astro";
import "@fontsource/quicksand/400.css";
import "@fontsource/quicksand/600.css";
import "@fontsource/open-sans/400.css";
import "@fontsource/open-sans/600.css";
import "../styles/global.css";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Zoe Biester - Logoterapeuta y Consejera en Adicciones"
  : "Zoe Biester - Logoterapeuta y Consejera Especialista en Adicciones CDMX | Del Valle";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Logoterapeuta y consejera especialista en adicciones en CDMX. Acompañamiento terapéutico presencial y en línea para superar adicciones y encontrar sentido de vida. Consultas en Col. Del Valle."
      canonical={canonicalURL}
      twitter={{
        creator: "@surjithctly",
        site: "@web3templates",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: "Zoe Biester - Logoterapeuta y Consejera Especialista en Adicciones",
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Zoe Biester - Logoterapeuta y Consejera Especialista en Adicciones",
        },
      }}
    />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
        <style is:global>
      :root {
        --font-heading: 'Quicksand', sans-serif;
        --font-body: 'Open Sans', sans-serif;
      }
      
      h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-heading);
      }
      
      body, p, a, span, li, button {
        font-family: var(--font-body);
      }
    </style>
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
