---
import Cta from "@/components/cta.astro";
import Features from "@/components/features.astro";
import Hero from "@/components/hero.astro";
import Layout from "@/layouts/Layout.astro";
import WarningSigns from "@/components/warning-signs.astro";
import Faq from "@/components/faq.astro";
import SectionWrapper from "@/components/section-wrapper.astro";
import BigTypography from "@/components/big-typography.astro";
---

<Layout title="">
    <!-- Hero sin contenedor -->
  <Hero />

  <!-- Features - ancho completo -->
  <SectionWrapper variant="bubble" overlap={true}>
    <Features />
  </SectionWrapper>

  <BigTypography />

  <!-- Warning Signs - ancho completo -->
  <SectionWrapper variant="cream">
    <WarningSigns />
  </SectionWrapper>

  <!-- FAQ - ancho completo -->
  <SectionWrapper variant="sage-light">
    <Faq />
  </SectionWrapper>

  <!-- CTA con contenedor -->
  <div class="w-full">
    <div class="max-w-7xl mx-auto px-6 md:px-8">
      <Cta />
    </div>
  </div>
</Layout>